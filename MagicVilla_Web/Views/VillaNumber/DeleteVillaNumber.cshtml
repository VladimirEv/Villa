@model MagicVilla_Web.Models.ViewModels.VillaNumberDeleteVM

<form asp-action="DeleteVillaNumber">
    <br />

    <div class="container border p-3">
        <h1 class="text-primary">Delete Villa</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="VillaNumberDeleteWeb.VillaNo" class="control-label pt-2" style="font-sise:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNumberDeleteWeb.VillaNo" readonly class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="VillaNumberDeleteWeb.VillaID" class="control-label pt-2" style="font-sise:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="VillaNumberDeleteWeb.VillaID" readonly class="form-select" asp-items="@Model.VillasSelectList">
                    <option disabled selected> -- Select Villa -- </option>
                </select>
            </div>

            <div class="col-2">
                <label asp-for="VillaNumberDeleteWeb.SpecialDetails" class="control-label pt-2" style="font-sise:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="VillaNumberDeleteWeb.SpecialDetails" disabled class="form-control" rows="5"></textarea>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" value="Delete" class="btn btn-success form-control">Back to List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


