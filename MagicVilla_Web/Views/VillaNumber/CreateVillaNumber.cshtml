@model MagicVilla_Web.Models.ViewModels.VillaNumberCreateVM

<form asp-action="CreateVillaNumber">
    <br />

    <div class="container border p-3">
        <h1 class="text-primary">Create Villa</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="VillaNumberCreateWeb.VillaNo" class="control-label pt-2" style="font-sise:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNumberCreateWeb.VillaNo" class="form-control" />
                <span asp-validation-for="VillaNumberCreateWeb.VillaNo" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="VillaNumberCreateWeb.VillaID" class="control-label pt-2" style="font-sise:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="VillaNumberCreateWeb.VillaID" class="form-select" asp-items="@Model.VillasSelectList">
                    <option disabled selected> -- Select Villa -- </option>
                </select>
                <span asp-validation-for="VillaNumberCreateWeb.VillaID" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="VillaNumberCreateWeb.SpecialDetails" class="control-label pt-2" style="font-sise:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="VillaNumberCreateWeb.SpecialDetails" class="form-control" rows="5"></textarea>
                <span asp-validation-for="VillaNumberCreateWeb.SpecialDetails" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" value="Create" class="btn btn-success form-control">Back to List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
